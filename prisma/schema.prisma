generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id            String   @id
  title         String
  description   String
  level         String
  category      String
  duration      String
  modules       Int      @default(0)
  progress      Int      @default(0)

  // nested modules/lessons store as JSON
  modulesList   Json

  // prerequisites store as array (optional)
  prerequisites String[] @default([])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([level])
  @@index([category])
}
